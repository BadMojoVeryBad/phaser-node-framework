{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "lib": ["es2017", "es7", "es6", "dom", "esnext", "dom.iterable", "scripthost"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
