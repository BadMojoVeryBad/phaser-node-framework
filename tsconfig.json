{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
